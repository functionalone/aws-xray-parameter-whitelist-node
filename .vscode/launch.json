{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    		
    {
			// Name of configuration; appears in the launch configuration drop down menu.
			"name": "Mocha test",
			// Type of configuration. Possible values: "node", "mono".
			"type": "node",
			"request": "launch",
			// Workspace relative or absolute path to the program.
			"program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
			// Automatically stop program after launch.
			"stopOnEntry": false,
			// Command line arguments passed to the program.
			//can also pass in a specific grep pattern to run a specific test. Such as:  "--grep", "s3"
			"args": ["--no-timeouts", "${workspaceRoot}/dist/**/*.test.js"],
			"sourceMaps": true,
			"outFiles": [
        "${workspaceRoot}/dist/**/*.js"
      ],
			// Workspace relative or absolute path to the working directory of the program being debugged. Default is the current workspace.
			"cwd": "${workspaceRoot}",
			// Workspace relative or absolute path to the runtime executable to be used. Default is the runtime executable on the PATH.
			"runtimeExecutable": null,
			// Environment variables passed to the program. (can also try setting to "production")
			"env": { 
				"NODE_ENV": "testing",
				"AWS_PROFILE": "test",
				"AWS_REGION": "us-east-1"
			}
		}
  ]
}